{
  "s": [
    {
      "description": "This is a sample for hatool's scripting engine, used to demonstrate some of its features",
      "name": "Sample Script",
      "snippets": [
        {
          "name": "default",
          "steps": [
            {
              "say": "Hi, I'm Max Bot, here to help you out.",
              "uid": "b2adc5ee81"
            },
            {
              "say": "What's your name?",
              "uid": "b2adc5ee81"
            },
            {
              "uid": "07edc5bc9a",
              "wait": {
                "placeholder": "Your name",
                "variable": "name"
              }
            },
            {
              "say": "Nice to meet you, {{name}}",
              "uid": "0c27f45290"
            },
            {
              "say": "How can I help you?",
              "uid": "cea0de5b2d"
            },
            {
              "uid": "a43e36c9fb",
              "wait": {
                "options": [
                  {
                    "show": "I'm okay, just checking you out.",
                    "value": "okay"
                  },
                  {
                    "show": "I need insurance",
                    "steps": [
                      {
                        "say": "Great!, I'm good with that.",
                        "uid": "8cf9301dda"
                      }
                    ],
                    "uid": "9e52927ddd",
                    "value": "customer_lead"
                  }
                ],
                "variable": "wants"
              }
            },
            {
              "switch": {
                "arg": "wants",
                "cases": [
                  {
                    "match": "customer_lead",
                    "steps": [
                      {
                        "say": "What do you want to insure?",
                        "uid": "a45667e8bc"
                      },
                      {
                        "goto": "insurance_types",
                        "uid": "df29850086"
                      }
                    ],
                    "uid": "eb19b80c7c"
                  },
                  {
                    "default": true,
                    "steps": [
                      {
                        "say": "Okay, so just tell me about your day then",
                        "uid": "24f1b100a0"
                      },
                      {
                        "uid": "077e53233d",
                        "wait": {
                          "long": true,
                          "variable": "notes"
                        }
                      }
                    ],
                    "uid": "5ac55b0b7c"
                  }
                ]
              },
              "uid": "5196d87f93"
            },
            {
              "say": "Before I go, here's a random Chuck Norris Joke",
              "uid": "c182f6d264"
            },
            {
              "do": {
                "cmd": "get_chuck",
                "variable": "joke"
              },
              "uid": "b685dd4730"
            },
            {
              "say": "\"{{joke}}\"",
              "uid": "be7f675965"
            },
            {
              "say": "Goodbye for now!",
              "uid": "7400e7ab41"
            }
          ],
          "uid": "25705bb5c7"
        },
        {
          "name": "insurance_types",
          "steps": [
            {
              "say": "Please select an insurance category that applies.",
              "uid": "7c3c01c2c0"
            },
            {
              "uid": "f354cfbfd0",
              "wait": {
                "multi": true,
                "options": [
                  {
                    "field": "car",
                    "show": "Car insurance"
                  },
                  {
                    "field": "house",
                    "show": "House insurance"
                  },
                  {
                    "show": "continue"
                  }
                ],
                "variable": "category"
              }
            },
            {
              "say": "Thanks, one of my human friends at Maxpool will get back to you shortly.",
              "uid": "b2adc5ee82"
            }
          ],
          "uid": "f619591d05"
        }
      ]
    }
  ]
}